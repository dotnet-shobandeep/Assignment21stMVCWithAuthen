@model MovieCustomerMvcAppWithAuthentication.ViewModel.NewMovieViewModel
@{
    ViewBag.Title = "Create";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.GenreType, "Id", "GenreName"), " ", new { @class = "form-control" })
    </div>
   @Html.HiddenFor(m=>m.Movie.Id)
    @*<div>
            @Html.LabelFor(m=>m.IsSubscribedToNewsLetter)
            @Html.CheckBoxFor(m=>m.IsSubscribedToNewsLetter)
        </div>*@
    <button type="submit" class="btn btn-primary">Save</button>

}

